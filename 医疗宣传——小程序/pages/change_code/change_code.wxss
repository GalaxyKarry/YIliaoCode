page{
  height: 100%;
  background-color: #F0F3FF;
}
.container{
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
  margin-bottom: 30rpx;
}
.title{
  font-weight: bolder;
  font-size: xx-large;
}
.subTitle{
  font-weight: bolder;
  color: #929DB3;
}
.inputs{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}
.item{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 600rpx;
  height: 100rpx;
  border-radius: 80rpx;
  background-color: white;
  margin-top: 40rpx;
  box-shadow: 0px 4px 10px 0px rgba(0, 0, 0, 0.3);
}
.item image{
  height: 25px;
  width: 25px; 
  padding: 25rpx;
  align-self: center;
}
.item input{
  border-left: solid #e9e9e9;
  align-self: center;
  padding: 10rpx;
}
.inputs button{
  background-color: #786FD2;
  color: white;
  margin-top: 100rpx;
  width: 283rpx;
  height: 81rpx;
  border-radius: 17rpx;
  font-size: 35rpx;
}