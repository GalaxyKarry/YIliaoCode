<view class="container">
  <view class="outcome1" wx:if="{{results.pass==0}}">
    <text class="result1">合格</text>
  </view>
  <view class="outcome0" wx:if="{{results.pass==1}}">
    <text class="result0">不合格</text>
  </view>
  <view class="outcome" wx:if="{{results.pass==-1}}">
    <text class="result">检测中...</text>
  </view>
  <view class="info">
    <view class="item">
      <text class="title">检测id：</text>
      <text class="content">{{userInfo.nickName}}</text>
    </view>

    <view class="item">
      <text class="title">检测时间：</text>
      <text class="content">{{ results.time }}</text>
    </view>

    <view class="item">
      <text class="title">建议：</text>
      <text class="content">{{ results.proposal }}</text>
    </view>

    <view class="item">
      <text class="title">相关视频：</text>
    </view>
  </view>

  <video src="{{videos.left}}" autoplay="{{true}}" muted="{{true}}"/>
  <text style="align-self: center;">左视角洗手视频</text>
  <video src="{{videos.up}}" autoplay="{{true}}" muted="{{true}}"/>
  <text style="align-self: center;">俯视角洗手视频</text>
  <video src="{{videos.right}}" autoplay="{{true}}" muted="{{true}}"/>
  <text style="align-self: center;">右视角洗手视频</text>
  
  <van-button class="but" type="primary" bindtap="to_record" data-cid="{{ results.cid }} " data-uid="{{ results.uid }}">反馈</van-button>
  
</view>

