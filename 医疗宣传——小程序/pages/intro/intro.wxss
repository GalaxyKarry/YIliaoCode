page{
  background-color: #EBEBE3;
}
swiper{
  height: 500rpx;
}
swiper-item{
  display: flex;
  justify-content: center;
}
.img{
  height: 100%;
  width: 100%;
}
.intro-word{
  margin-top: 15rpx;
  display: flex;
  justify-content: center;
}
.intro-word text{
  font-weight: lighter;
  font-size: medium;
  color: #A79B9B;
}
.container{
  
  border-radius: 25rpx;
  margin: 10rpx;
  margin-top: 50rpx;
  
}
.comp{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title{
  color: #2EB266;
  font-size: 60rpx;
  font-weight: bold;
  margin-left: 30rpx;
  justify-self: left;
}
.widgets{
  display: flex;
  flex-direction: row;
}
.mid{
  display: flex;
  flex-direction: column;
  margin: 10rpx;
}
.widget{
  width: 300rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
  padding: 20rpx;
  margin-top: 25rpx;
  border-radius: 25rpx;
  box-shadow: 5rpx 10rpx 20rpx rgba(0, 0, 0, 0.15);
}
.widget text{
  display: flex;
  flex-direction: row;
  font-size: 25rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.widget image{
  height: 130rpx;
  width: 130rpx;
  border-radius: 25rpx;
}

.content .title{
  font-weight: bold;
  color:  black;
  font-size: 30rpx;
}