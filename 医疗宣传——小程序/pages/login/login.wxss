page{
  background-color: #F0F3FF;
  height: 100%;
}
.title text{
  font-size: xx-large;
  color: black;
  font-weight: bolder;
}
.avatar{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar button{
  margin-top: 80rpx;
}
.avatar text{
  font-size: small;
  font-weight: bolder;
  color: #929DB3;
}
.avatar image{
  height: 200rpx; 
  width: 200rpx; 
  border-radius: 200rpx; 
}

button[plain]{
  border: none;
}
.inputs{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}
.item{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 600rpx;
  height: 100rpx;
  border-radius: 80rpx;
  background-color: white;
  margin-top: 40rpx;
  box-shadow: 0px 4px 10px 0px rgba(0, 0, 0, 0.3);
}
.item image{
  height: 25px;
  width: 25px; 
  padding: 25rpx;
  align-self: center;
}
.item input{
  border-left: solid #e9e9e9;
  align-self: center;
  padding: 10rpx;
}
.inputs button{
  background-color: #786FD2;
  color: white;
  margin-top: 100rpx;
  width: 283rpx;
  height: 81rpx;
  border-radius: 17rpx;
  font-size: 35rpx;
}