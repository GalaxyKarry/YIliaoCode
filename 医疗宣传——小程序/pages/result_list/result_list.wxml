<view class="container">
    <view class="text">
      <text>检测结果</text>
    </view>
    <van-search
      value="{{ value }}"
      placeholder="请输入搜索关键词"
      use-action-slot
      bind:change="onChange"
      bind:search="onSearch"
    >
      <van-button round type="default" slot="action" bind:tap="onClick" size="small">搜索</van-button>
    </van-search>
    <van-dropdown-menu>
        <van-dropdown-item value="{{ value1 }}" options="{{ option1 }}" />
    </van-dropdown-menu>
     
    <view class="result-list" wx:for="{{results}}">
          <view class="result" bindtap="post_result">
            <view class="mid">
              <text class="text1">检测时间：{{item.time}}</text>
              <text>检测地点：{{item.place}}</text>
              <text>是否合格：{{item.pass}}</text>
            </view>
            <view>
              <van-icon name="arrow"/>
            </view>
          </view>
          
    </view>

</view>