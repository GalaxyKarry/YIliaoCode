page{
  background-color: #F0F3FF;
  height: 100%;
}

.info{
  display: flex;
  flex-direction:column;
  padding: 15rpx;
  justify-content: center;
  align-items: center;
}
.info image{
  height: 200rpx; 
  width: 200rpx; 
  border-radius: 200rpx; 
}
.name{
  font-size: 50rpx;
  color: black;
  font-weight: bolder;
}
.tele text{
  font-size: 30rpx;
  font-weight: bolder;
  color: #929DB3;
}

.items{
  padding: 20rpx;
}
.item0{
  margin-top: 35rpx;
  background-color: #BBB7E8;
  display: flex;
  flex-direction: row;
  border-radius: 30rpx;
  box-shadow: 0px 4px 10px 0px rgba(0, 0, 0, 0.3);
}
.content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
  margin-left: 40rpx;
}
.content .title{
  font-size: 50rpx;
  color: black;
  font-weight: bolder;
}
.content .subTitle{
  font-size: 25rpx;
  font-weight: bolder;
  color: #62616A;
}

.bar{
  width: 750rpx;
  height: 162rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  box-shadow: 0rpx -10rpx 20rpx rgba(0, 0, 0, 0.15);
  border-top-left-radius: 29rpx;
  border-top-right-radius: 29rpx;
  display: flex;
  justify-content: space-around;
}
.bar .item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 45rpx;
}
.bar .item text{
  font-size: x-small;
  font-weight: bolder;
  color: #929DB3;
}

.shield{
  background-color: #F0F3FF;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.shield image{
  width: 561rpx;
  height: 511rpx;
}
.shield button{
  background-color: #786FD2;
  color: white;
  margin-top: 36rpx;
  width: 283rpx;
  height: 81rpx;
  border-radius: 17rpx;
  font-size: 35rpx;
}